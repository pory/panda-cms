source :rubygems

gem 'sinatra'
gem 'rake'
gem 'haml'
gem 'sass'
gem 'rest-client'

# faster json
gem 'multi_json'
gem 'yajl-ruby'

gem 'i18n' # required to get activesupport core_ext working
gem 'activesupport', '3.2.2'
gem 'activerecord', '3.2.2'

group :test do
  # required
  gem 'rspec'
  gem 'rack-test'
  gem 'capybara'
  gem 'factory_girl', '>= 2.1.0'
  gem 'database_cleaner'
  gem 'mocha'
  # optional (for autotest)
  gem 'ZenTest'
  gem 'autotest-fsevent'
  gem 'autotest-growl'
end